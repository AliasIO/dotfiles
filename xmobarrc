Config { font     = "xft:MonteCarloFixed12"
       , bgColor  = "#1b1b1b"
       , fgColor  = "#666"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run StdinReader
                    , Run Com "date +'%b %d %T' | tr -s '[:lower:]' '[:upper:]'" [] "date" 10
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=#FFF>%date%</fc>"
       }
